<!DOCTYPE html>
<html>
  <head>
    <title>RailsMioVino</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <br><%= link_to "Wines List", wines_path %>
    <% if flash[:message] %>
      <br><br>
      <div class="fields_with_errors"><%= flash[:message] %></div>
    <% end %>
    <%= yield %>
  </body>
</html>
